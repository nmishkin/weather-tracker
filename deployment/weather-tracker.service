[Unit]
Description=Florida Weather Tracker Backend
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/weather-tracker/backend
Environment="PATH=/var/www/weather-tracker/venv/bin"
ExecStart=/var/www/weather-tracker/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target
